# SoL

PS1='\u@\h: \w: '
PS2='> '
PATH=/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/bin:/usr/local/sbin
PATH=$PATH:/server/Unreal:/server/apache/bin:/server/bind/bin:/server/bind/sbin
PATH=$PATH:/server/cvs/bin:/server/dante/bin:/server/dante/sbin
PATH=$PATH:/server/dhcp/bin:/server/dhcp/sbin:/server/icecast/bin
PATH=$PATH:/server/mysql/bin:/server/news/bin:/server/openldap/bin
PATH=$PATH:/server/openldap/sbin:/server/php/bin:/server/postgresql/bin
PATH=$PATH:/server/proftpd/bin:/server/proftpd/sbin:/server/samba/bin
PATH=$PATH:/server/samba/sbin:/server/squid/bin:/server/vtun/sbin
PATH=$PATH:/usr/share/j2re1.3.1/bin:/usr/share/j2sdk1.3.1/bin
PATH=$PATH:/usr/X11R6/bin
PATH=$PATH:/opt/gnome/bin:/opt/gnome/sbin
PATH=$PATH:/opt/mozilla

export PS1 PS2 PATH

# COLORS
eval `dircolors -b /etc/dir_colors`
if [ -f ~/.dir_colors ]  ; then
  eval `dircolors -b ~/.dir_colors`
fi
unalias ls 2>/dev/null
alias ls="ls -N --color=auto -T0"

# LESS 
export LESSCHARSET="latin1"
export LESS="-M -S -I"
export LESSECHO="/bin/lessecho"
export LESSOPEN="|lesspipe.sh %s"


export COLORTERM=1

#ALIASES
alias less="less -M -I "
alias man="man -P '/bin/less -isMR'"
alias dir="ls -l"
alias ll="ls -l"
alias l="ls -alF"
alias unix2dos='recode lat1..ibmpc'
alias dos2unix='recode ibmpc..lat1'

export INPUTRC="/etc/inputrc"

#This is the nice looking console cursor
if [ $TERM == "linux" ]; then
 echo -e '\033[?17;38;64c' ; fi

umask 022

export JAVA_HOME=/usr/share/j2sdk1.3.1/
export CATALINA_HOME=/server/jakarta-tomcat/
export QTDIR=/opt/qt
